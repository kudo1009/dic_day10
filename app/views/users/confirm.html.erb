<h3>以下の内容で登録する</h3>
<%= form_with(model: @user,local: true,url: users_path) do |form| %>
    <%= form.hidden_field :name %>
    <%= form.hidden_field :email %>
    <%= form.hidden_field :password %>
    <%= form.hidden_field :password_confirmation %>
    <p>[お名前]<%= @user.name %></p>
    <p>[メールアドレス]<%= @user.email %></p>
    <p>[パスワード]<%= @user.password %></p>
    <%= form.submit "登録する",class:"btn btn-default col-xs-offset-3 col-xs-3 col-sm-1 col-sm-offset-5"%>
<% end %>
<%= form_with(model: @user, url: new_user_path, local: true, method: 'get') do |form| %>
  <%= form.hidden_field :name %>
  <%= form.hidden_field :email %>
  <%= form.submit "戻る",name:"back",class:"btn btn-default col-xs-3 col-sm-1"%>
<% end %>
